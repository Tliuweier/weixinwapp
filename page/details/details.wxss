.commodity_screeen{
	z-index: 1;/*图层位置*/
	width:100%;
	height: 100%;
	background-color: rgba(0,0,0,0.5);
	position:fixed;
	bottom: 0;
	opacity: 0.5;/*透明层度*/
}
.display-bock{
	display: block !important;
}
.display-none{
	display: none !important;
}
.bg_fff{
	background-color: #fff;
}
.catalog_area{
	position: fixed;
	max-height: 600rpx;
	min-height: 600rpx;
	z-index: 2;
	bottom: 0;
	padding: 25rpx;
}
.catalog_area .catalog_title{
	position: fixed;
	height: 160rpx;
	width:710rpx;
	border-bottom:1px solid #e5e5e5; 
	padding-bottom: 10rpx;	
}
.catalog_area .catalog_title .thumbnails{
	width: 200rpx;
	height: 200rpx;
	position: absolute;
	border: #b0b0b0;
	top: -60rpx;
}
.catalog_area .catalog_title .cancel{
	width: 40rpx;
	height: 40rpx;
	position: absolute;
	right: 0;
	top: 0;
}
.catalog_area .info_tip{
	margin-top: 50rpx;
	margin-left: 220rpx;
}
.catalog_area .info_choose{
	width: 710rpx;
}
.display-flex-row{
	display: flex;
	flex-direction: row;
}
.catalog_area .info_choose .catalog_name{
	padding: 10rpx 0;
	font-weight: bold;
}
.catalog_area .info_choose .catalog_items{
  font-size: 0.8em;
  flex-wrap:wrap;
}
.catalog_area .info_choose .catalog_items .catalog_item{
	padding: 15rpx;
	border: 1px dashed #b0b0b0;
	margin-top: 15rpx;
	margin-right: 20rpx;
}
.borderTop{
	border-top: 1px solid #e5e5e5;
	margin-top: 25rpx;
}
.catalog_area .catalog_count{
	justify-content: space-between;
	height: 100rpx;
	line-height: 100rpx;
}
.catalog_area .catalog_count .catalog_name{
	font-weight: bold;
	padding: 12.5rpx 0 0 0;
}
.catalog_area .catalog_count .count_control{
  margin-top:20rpx;
  height:80rpx;
}
.catalog_area .item_btn{
	display: inline-block;
	width: 80rpx;
	height: 80rpx;
	text-align: center;
	line-height: 80rpx;
	border: 2rpx solid #b0b0b0;
}
.catalog_area .item_num{
	display: inline-block;
    width: 80rpx;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    border-top: 2rpx solid #b0b0b0;
    border-bottom: 2rpx solid #b0b0b0;
    font-size: 28rpx;
    color: #929292;
}
.catalog_area .btn_area {
	width: 100%;
	margin: 0 -20rpx;
	position: fixed;
	bottom: 0;
}
.goods_half_half{
	width: 50%;
	height: 40px;
	font-size: 15px;
	line-height: 40px;
	/*margin-top: 10rpx;*/
	text-align: center;
	color: #fff;
}
