	top: 10px;
	left: 23px;
	/*right: 0px;*/
}
.footer .cart{
	width: 45%;
	text-align:center;
	background-color: #FF9600;
	height: 100rpx;
	color: #fff;
	font-size: 36rpx;
	padding: 20rpx 0;
}
.footer .buy{
	width: 45%;
	text-align:center;
	background-color: #E93D3B;
	height: 100rpx;
	color: #fff;
	font-size: 36rpx;
	padding: 20rpx 0;
}