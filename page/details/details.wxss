.tab{

  width:710rpx; 
  padding:0 20rpx;
  height: 80rpx;
  line-height: 80rpx;

}

.tab .tab-content{
  display:flex;
  flex-direction:row;
  justify-content:space-between;
}
.tab .btn{
	width: 353rpx;
	color: #888888;
	text-align: center;
	border-bottom: 2px solid #f5f5f5;
}
.tab .right_btn{
   border-right:2rpx solid #f5f5f5; 
}
.tab .left_btn{
   border-left:2rpx solid #f5f5f5; 
}
.tab .active{
  color: #ff6700 !important;  
  border-bottom:4rpx solid #ff6700 !important; 
}







.footer{
	position: fixed;
	display: flex;
	flex-direction:row;
	background-color: #fff;
	height: 100rpx;
	z-index: 1;
	width: 100%;
	bottom: 0;
}
.footer .cartimg{
	width: 10%;
	height: 100rpx;
}
.footer .cartimg image{
	width: 70rpx;
	height: 70rpx;
	padding: 20rpx 0;
}
