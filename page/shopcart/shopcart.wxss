	/*right: 0rpx;*/
	color: #E93D3B;
}
.color_fff{
	font-size: 26rpx;
	color: #B4B4B4;
}
.footer .settlement .priceandbtn .btn{
	color: #fff;
	height: 140rpx;
	font-size: 45rpx;
	background-color:#B4B4B4;
}
.footer .settlement .priceandbtn .active{
	background-color: #E93D3B;
}

.footer .settlement .priceandbtn .btn .os{
	margin: 10rpx;
	padding: 20rpx;
}
