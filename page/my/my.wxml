<view class="container">
	<view class="user-info" wx:if="{{userInfo}}">
		<image src="{{userInfo.avatarUrl}}" class="user-image"></image>
		<view class="user-nickname">
			<view class="user-name">
				{{userInfo.nickName}}
				<image src="/images/man.png" class="user-sex" wx:if="{{userInfo.gender==1}}"></image>
				<image src="/images/woman.png" class="user-sex" wx:if="{{userInfo.gender==2}}"></image>
			</view>
			<view class="user-location">{{userInfo.province}},{{userInfo.city}}</view>
		</view>
	</view>
	<view class="Tbutton">
		<view class="grid">
			<image class="user-icon" src="/images/note.png"></image>
			<text>设置</text>
		</view>
		<view class="grid">
			<image class="user-icon" src="/images/note.png"></image>
			<text>关于</text>
		</view>
		<view class="grid">
			<image class="user-icon" src="/images/note.png"></image>
			<text>收藏</text>
		</view>
		<view class="grid">
			<image class="user-icon" src="/images/note.png"></image>
			<text>喜欢</text>
		</view>
		<view class="grid">
			<image class="user-icon" src="/images/note.png"></image>
			<text>浏览记录</text>
		</view>

	</view>
</view>