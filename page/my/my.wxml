<view class="container">
	<view class="user-info" wx:if="{{userinfo}}">
		<image src="{{userinfo.imgUrl}}" class="user-image"></image>
		<view class="user-nickname">
			<view class="user-name">
				{{userinfo.username}}
				<image src="/images/profile.png" class="user-sex"></image>
			</view>
			<view class="user-location">{{userinfo.province}},{{userinfo.city}}</view>
		</view>
	</view>
	<view class="Tbutton">
		<view class="grid">
			<image class="user-icon" src="/images/note.png"></image>
			<text>设置</text>
		</view>
		<view class="grid">
			<image class="user-icon" src="/images/note.png"></image>
			<text>关于</text>
		</view>
		<view class="grid">
			<image class="user-icon" src="/images/note.png"></image>
			<text>收藏</text>
		</view>
		<view class="grid">
			<image class="user-icon" src="/images/note.png"></image>
			<text>喜欢</text>
		</view>
		<view class="grid">
			<image class="user-icon" src="/images/note.png"></image>
			<text>浏览记录</text>
		</view>

	</view>
</view>